{
  "compilerOptions": {
    "esModuleInterop": true,
    "skipLibCheck": true,
    "target": "es2022",
    "allowJs": true,
    "moduleDetection": "force",
    "isolatedModules": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "strict": true,
    "noUncheckedIndexedAccess": true
  }
}
